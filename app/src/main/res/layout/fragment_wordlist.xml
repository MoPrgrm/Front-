<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="0dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:background="@android:color/white">

    <!-- 커밋 /상단 타이틀 -->
    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="32dp">
        <ImageView
            android:id="@+id/ivWordlistIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_wordlist" />
        <TextView
            android:id="@+id/tvWordlistTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단어장"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- 단어 버튼 -->
    <LinearLayout
        android:id="@+id/btnWord"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/wordlist_button_bg"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="16dp">
        <ImageView
            android:id="@+id/ivWordIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_aa" />
        <TextView
            android:id="@+id/tvWordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단어"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:textColor="#000000"/>
    </LinearLayout>

    <!-- 퀴즈 버튼 -->
    <LinearLayout
        android:id="@+id/btnQuiz"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/wordlist_button_bg"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:id="@+id/ivQuizIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_quiz" />
        <TextView
            android:id="@+id/tvQuizText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="퀴즈"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:textColor="#000000"/>
    </LinearLayout>

</LinearLayout>